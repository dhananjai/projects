class UserDiscussionsController < ApplicationController
  before_filter :login_required

  # GET /user_discussions
  # GET /user_discussions.xml
  def index
    @user_discussions = UserDiscussion.all

    respond_to do |format|
      format.html # index.html.erb
      format.xml  { render :xml => @user_discussions }
    end
  end

  # GET /user_discussions/1
  # GET /user_discussions/1.xml
  def show
    @user_discussion = UserDiscussion.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.xml  { render :xml => @user_discussion }
    end
  end

  # GET /user_discussions/new
  # GET /user_discussions/new.xml
  def new
    @user_discussion = UserDiscussion.new

    respond_to do |format|
      format.html # new.html.erb
      format.xml  { render :xml => @user_discussion }
    end
  end

  # GET /user_discussions/1/edit
  def edit
    @user_discussion = UserDiscussion.find(params[:id])
  end

  # POST /user_discussions
  # POST /user_discussions.xml
  def create
    @user_discussion = UserDiscussion.new(params[:user_discussion])

    respond_to do |format|
      if @user_discussion.save
        format.html { redirect_to(@user_discussion, :notice => 'User discussion was successfully created.') }
        format.xml  { render :xml => @user_discussion, :status => :created, :location => @user_discussion }
      else
        format.html { render :action => "new" }
        format.xml  { render :xml => @user_discussion.errors, :status => :unprocessable_entity }
      end
    end
  end

  # PUT /user_discussions/1
  # PUT /user_discussions/1.xml
  def update
    @user_discussion = UserDiscussion.find(params[:id])

    respond_to do |format|
      if @user_discussion.update_attributes(params[:user_discussion])
        format.html { redirect_to(@user_discussion, :notice => 'User discussion was successfully updated.') }
        format.xml  { head :ok }
      else
        format.html { render :action => "edit" }
        format.xml  { render :xml => @user_discussion.errors, :status => :unprocessable_entity }
      end
    end
  end

  # DELETE /user_discussions/1
  # DELETE /user_discussions/1.xml
  def destroy
    @user_discussion = UserDiscussion.find(params[:id])
    @user_discussion.destroy

    respond_to do |format|
      format.html { redirect_to(user_discussions_url) }
      format.xml  { head :ok }
    end
  end
end
