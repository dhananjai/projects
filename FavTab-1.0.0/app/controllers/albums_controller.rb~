    @album = Album.find(params[:id])
    #@created_a_u= Array.new
    #@defalut_album = @login_user.default_group[0]
    #@group.group_users.each do |g_u|
      @album.destroy
      #group = @login_user.belongs_to_group(g_u.user_id)
