class AlbumsController < ApplicationController
  require 'uri'
  before_filter :login_required#, :except =>[:find_photo]
  before_filter :other_user_check, :only => [:index,:show]
  # GET /albums
  # GET /albums.xml
  def index
    @other_user = @login_user
    @albums = @login_user.albums
  end

  #--
  #Created by: Satish Zol
  #Created on: 13/02/2012
  #Purpose: To create album
  #++
  def create_album
    @album = Album.new(:name=>params[:album][:name], :user_id=>@login_user.id)
    @notice = @album.save ? "Album created successfully.":"Album name already exist."

    respond_to do |format|
      format.js
    end
  end

  #--
  #Created by: Satish Zol
  #Created on: 13/02/2012
  #Purpose: To delete album
  #++
