class UserDetail < ActiveRecord::Base
  belongs_to  :user
  validates_numericality_of :age, :allow_nil =>true, :greater_than_or_equal_to => 18, :less_than_or_equal_to => 100, :message => "Age must be between 18 and 100."
  validates_length_of :work_info, :maximum => 600, :message => "Work History should be upto 600 character."
  validates_length_of :education, :maximum => 600, :message => "Education should be 600 character."
  validates_length_of :interest_internet, :maximum => 600, :message => "Internet Interest should be 600 character."
  validates_length_of :about_me, :maximum => 200, :message => "About me should be 200 character."


end
